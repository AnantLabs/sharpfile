<?xml version="1.0"?>
<configuration xmlns="http://schemas.microsoft.com/.NetConfiguration/v2.0">
  <configSections>
      <section name="rewriteSettings" type="RewriteSettings" />
  </configSections>
  
	<appSettings>
		<add key="Amazon.AWSECommerceService" value="http://soap.amazon.com/onca/soap?Service=AWSECommerceService"/>
		<add key="encryptConnectionStrings" value="false" />
		<add key="timezoneDifference" value="0" />
	</appSettings>
	
	<connectionStrings>
		<remove name="longueurConnectionString"/>
		<add name="longueurConnectionString" connectionString="Data Source=Stinky;Initial Catalog=Longueur;Integrated Security=True"/>
	</connectionStrings>

  <rewriteSettings>
    <rewrites>
      <rule url="/longueur/TheHillellis/(\d+)" rewrite="/longueur/TheHillellis/Permalink.aspx?id=$1" />
    </rewrites>
  </rewriteSettings>

  <system.web>   
		<compilation debug="true">
			<assemblies>
				<add assembly="System.Design, Version=2.0.0.0, Culture=neutral, PublicKeyToken=B03F5F7F11D50A3A"/>
			</assemblies>
		</compilation>
		
		<customErrors mode="Off"  defaultRedirect="oops.html">
			<error statusCode="403" redirect="oops.html" />
			<error statusCode="404" redirect="oops.html" />
		</customErrors>

    <trace enabled="true" localOnly="true" />
    <httpCookies httpOnlyCookies="true" />
    <sessionState cookieless="false" />
		
		<httpModules>
			<add name="MagicAjax" type="MagicAjax.MagicAjaxModule, MagicAjax"/>
		</httpModules>
		
		<authentication	mode="Forms">
			<forms name="Fookie" loginUrl="login.aspx" protection="All" path="/" cookieless="UseCookies" />
		</authentication>
		<authorization>
			<allow users="*"/>
		</authorization>

		<pages>
			<controls>
				<add tagPrefix="lng" src="~/Controls/Login.ascx" tagName="login"/>
				<add tagPrefix="lng" src="~/Controls/Blog/Content.ascx" tagName="content"/>
				<add tagPrefix="lng" src="~/Controls/Blog/Archives.ascx" tagName="archives"/>
			</controls>
		</pages>
	</system.web>
</configuration>
